//PROBLEM 11) Triangle - Right Justified Draw right angled triangle of given height//

import java.util.Scanner;

public class Problem11{
    public static void main(String [] args) {
        
        Scanner scan = new Scanner (System.in);
        System.out.println("Enter a Number:");
        int n = scan.nextInt();
        
        int a=0;
        
        for (int r=1 ; r<=n ; r++)
        {
            a=0;
            for (int s=1 ; s<=n-r ; s++)
            {
            System.out.print(" ");
            a++;
            }
            for (int c=1 ; c<=r ; c++)
            {     
            System.out.print(a+c);                    
            }
        System.out.println();
        }
    }        
}